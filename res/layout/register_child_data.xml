<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#43193b" >
    
    
     <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            
      		<ImageView
            android:id="@+id/childpic"
            android:layout_width="100dp"
            android:layout_marginTop="10dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/dp"
            android:scaleType="fitXY"
            />

         <EditText
                android:id="@+id/childfirstname"
                android:layout_width="230dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="First Name"
                android:background="@drawable/roundbutton1"
                android:textColor="#000000"
                android:textSize="15sp" 
                android:inputType="text"
                android:textStyle="italic"/>
         
          <EditText
                android:id="@+id/childlastname"
                android:layout_width="230dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:text="Last Name"
                android:background="@drawable/roundbutton1"
                android:textColor="#000000"
                android:inputType="text"
                android:textSize="15sp" 
                android:textStyle="italic"/>
          
          <EditText
                android:id="@+id/childmothername"
                android:layout_width="230dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:text="Mother Name"
                android:inputType="text"
                android:background="@drawable/roundbutton1"
                android:textColor="#000000"
                android:textSize="15sp" 
                android:textStyle="italic"/>
          
          <EditText
                android:id="@+id/childfathername"
                android:layout_width="230dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:text="Father Name"
                android:inputType="text"
                android:background="@drawable/roundbutton1"
                android:textColor="#000000"
                android:textSize="15sp" 
                android:textStyle="italic"/>
                
                <EditText
                android:id="@+id/childcurrentadd"
                android:layout_width="230dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:text="Current Address"
                android:background="@drawable/roundbutton1"
                android:textColor="#000000"
                android:textSize="15sp"
               android:inputType="textMultiLine" 
                android:textStyle="italic"/>

                <EditText
                android:id="@+id/childpermanentadd"
                android:layout_width="230dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:text="Permanent Address"
                android:inputType="textMultiLine"
                android:background="@drawable/roundbutton1"
                android:textColor="#000000"
                android:textSize="15sp" 
                android:textStyle="italic"/>
                
                <EditText
                android:id="@+id/childmobileno"
                android:layout_width="230dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:text="Contact Number" 
                android:background="@drawable/roundbutton1"
                android:textColor="#000000"
                android:inputType="phone"
                android:textSize="15sp" 
                android:textStyle="italic"/>
                
                 <EditText
                android:id="@+id/childage"
                android:layout_width="230dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:text="Age" 
                android:background="@drawable/roundbutton1"
                android:textColor="#000000"
                android:inputType="number"
                android:textSize="15sp" 
                android:textStyle="italic"/>

                 <EditText
                android:id="@+id/childsituation"
                android:layout_width="230dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:text="Situation"
                android:inputType="textMultiLine"
                android:background="@drawable/roundbutton1"
                android:textColor="#000000"
                android:textSize="15sp" 
                android:textStyle="italic"/>
                 
                 
         <RadioGroup
     				 	android:layout_width="wrap_content"
      					android:layout_height="wrap_content"
      					android:layout_marginTop="20dp"
      					android:weightSum="1"
      					android:id="@+id/genderradioGroup">
   
        <RadioButton
            android:id="@+id/btnmale"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:text="MALE"
            android:layout_gravity="center_horizontal"
            android:textSize="15dp"
            android:textColor="#000000" />

       			 <RadioButton
            android:id="@+id/btnfemale"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:text="FEMALE"
            android:textColor="#000000"
            android:textSize="15dp" />

			</RadioGroup>  

                  <DatePicker
                    android:id="@+id/datePicker1"
                    android:layout_width="230dp"
                    android:layout_height="40dp" />
                  
            <Button
        android:id="@+id/datasubmitbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textColor="#43193b"
        android:background="@drawable/roundbutton"
        android:text=" SUBMIT " />       
         
                
        </LinearLayout>
    </ScrollView>
    
    

</LinearLayout>
